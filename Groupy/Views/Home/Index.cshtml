@{
    ViewBag.Title = "Home Page";
}
<div class="jumbotron">
    <h1>GROUPY</h1>
    <p class="lead">Credit Card shopping experience made so simple with a wide variety of categories you can imagine.</p>
    @*<p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>*@
</div>
<h3>Treding Items!</h3>
<ul id="item-list">

    @foreach (var item in Model)
    {

        <li>
            <a href="@Url.Action("Details","Store",new { id = item.ItemId })">
                <img alt="@item.Title" src="@item.ItemArtUrl" />
                <br />

                <span>@item.Title</span>
            </a>

            @String.Format("{0:F}", item.Price)
            <p class="button1">

                @Html.ActionLink("Add to cart", "AddToCart",
        "ShoppingCart", new { id = item.ItemId }, "")
            </p>
        </li>



    }


</ul>